@using ProjectManagementRS.Models
@model ProjectManagementRS.Dtos.UserDto
<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" ng-click="close('Cancel')" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create New User</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Name, new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.Name"}})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Surname, new {@class = "col-md-2 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Surname, new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.Surname"}})
                            </div>
                        </div>
                        @Html.LabelFor(m => m.UserName, new {@class = "col-md-2 control-label"})
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.UserName"}})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.Email"}})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new {@class = "col-md-2 control-label"})
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.PhoneNumber, new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.PhoneNumber"}})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StartDate, new {@class = "col-md-2 control-label"})
                        <div class="col-md-6">
                            <input type="date"
                                   ng-model="User.StartDate"
                                   popup="d MMM yyyy"
                                   options="dateOptions"
                                   opened="opened"
                                   custom-datepicker/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate, new {@class = "col-md-2 control-label"})
                    <div class="col-md-6" >
                         <div class="input-group">
                        <input type="text"
                               ng-model="User.EndDate"
                               uib-datepicker-popup="d MMM yyyy"
                               options="dateOptions"
                               opened="false"/>
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="open1()"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Role, new {@class = "col-md-2 control-label"})
                    <div class="col-md-6">
                        @Html.DropDownListFor(m => m.Role, Enum.GetNames(typeof(RoleType)).Select(x => new SelectListItem {Text = x}), "Select", new Dictionary<string, object> {{"class", "form-control"}, {"ng-model", "User.Role"}})
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" class="btn btn-default btn-primary" ng-click="close('Ok')" value="Ok" data-dismiss="modal" aria-hidden="true"/>
                        <input type="button" class="btn btn-default" value="Cancel" ng-click="close('Cancel')" data-dismiss="modal" aria-hidden="true"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

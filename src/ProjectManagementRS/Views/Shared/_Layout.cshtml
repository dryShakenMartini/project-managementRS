<!DOCTYPE html>

<html ng-app="app-darkstar">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/ProjectManagementRS.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootswatch/spacelab/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css"/>
    <link rel="stylesheet" href="~/lib/angular-ui-grid/ui-grid.min.css"/>
    <base href="/"/>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Rigel</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a ui-sref="login">Log In</a>
                </li>
                <li>
                    <a href="#">Log Out</a>
                </li>
                <li>
                    <a ui-sref="register">Register</a>
                </li>
                <li>
                    <a href="#">Help</a>
                </li>
            </ul>
            <form class="navbar-form navbar-right">
                <input type="text" class="form-control" placeholder="Search...">
            </form>
        </div>
    </div>
</nav>

<div id="sidebar">
    <ul class="nav nav-sidebar">
        <li>
            <a ui-sref="home">Home</a>
        </li>
        <li>
            <a ui-sref="users">Users</a>
        </li>
        <li>
            <a ui-sref="projects">Projects</a>
        </li>
        <li>
            <a ui-sref="time">Time Sheet</a>
        </li>
    </ul>
</div>

<div id="wrapper">

    <div id="main">
        <div ui-view="">

            @RenderBody()
        </div>

    </div>
</div>

<script type="text/javascript" src="~/lib/jQuery/dist/jquery.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="~/lib/angular/angular.min.js"></script>
<script type="text/javascript" src="~/lib/angular-route/angular-route.min.js"></script>
<script type="text/javascript" src="~/lib/angular-ui-grid/ui-grid.min.js"></script>
<script type="text/javascript" src="~/lib/angular-ui-router/release/angular-ui-router.min.js"></script>
<script type="text/javascript" src="~/lib/angular-ui-router/release/angular-ui-router.min.js"></script>
<script type="text/javascript" src="~/js/app-darkstar.js"></script>
<script type="text/javascript" src="~/js/usersController.js"></script>
<script type="text/javascript" src="~/js/projectsController.js"></script>
<script type="text/javascript" src="~/js/modalDialogService.js"></script>
<script type="text/javascript" src="~/js/modalDialogController.js"></script>
</body>
</html>